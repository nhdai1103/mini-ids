{
  "system": {
    "debug": false,
    "version": "1.0.0"
  },
  
  "web_dashboard": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false,
    "auto_reload": true
  },
  
  "log_monitoring": {
    "enabled": true,
    "watch_directories": [
      "logs",
      "/var/log",
      "/var/log/apache2",
      "/var/log/nginx"
    ],
    "file_extensions": [".log"],
    "batch_process_interval": 5
  },
  
  "detection": {
    "brute_force": {
      "enabled": true,
      "threshold": 5,
      "time_window_minutes": 5
    },
    
    "port_scan": {
      "enabled": true,
      "threshold": 10,
      "time_window_minutes": 1
    },
    
    "payload_detection": {
      "enabled": true,
      "case_insensitive": true
    }
  },
  
  "alerting": {
    "database_path": "alerts.db",
    "json_path": "alerts.json",
    "max_json_entries": 1000,
    
    "retention_policy": {
      "enabled": true,
      "days": 7
    },
    
    "notifications": {
      "email": {
        "enabled": false,
        "smtp_server": "smtp.gmail.com",
        "smtp_port": 587,
        "from_address": "alerts@example.com",
        "to_addresses": ["admin@example.com"],
        "min_threat_level": "high"
      },
      
      "webhook": {
        "enabled": false,
        "url": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
        "min_threat_level": "critical"
      }
    }
  },
  
  "threats": {
    "sql_injection": {
      "enabled": true,
      "severity": "high"
    },
    
    "xss": {
      "enabled": true,
      "severity": "high"
    },
    
    "path_traversal": {
      "enabled": true,
      "severity": "high"
    },
    
    "command_injection": {
      "enabled": true,
      "severity": "high"
    },
    
    "brute_force": {
      "enabled": true,
      "severity": "high"
    },
    
    "reconnaissance": {
      "enabled": true,
      "severity": "medium"
    }
  },
  
  "whitelist": {
    "enabled": false,
    "ips": [],
    "paths": []
  },
  
  "performance": {
    "batch_size": 100,
    "cache_size": 10000,
    "max_workers": 4
  }
}
